@model Usuario
@{
    ViewData["Title"] = "Start";
}
@{
    Layout = "_NoMenuLayout";
}
@{
    ViewData["BodyClass"] = "start-page";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<link href="~/css/site.css" rel="stylesheet" />
<div class="text-center">
    <div>
        <a href="@Url.Action("Main", "Home")" class="btn btn-danger">Ingresar al sitio directamente</a>
    </div>
</div>


<div class="text-center">
    <h1 class="display-4">Start</h1>
    <div>
        <form id="productoForm" asp-action="Log_In" method="post">

            <div class="boxInputs">
                <div class="form-group">
                    <label>Usuario: </label>
                    <input id="getUsuario" asp-for="NombreUsuario" type="text" class="form-control" placeholder="NombreUsuario" />
                </div>

                <div class="form-group">
                    <label>Contraseña: </label>
                    <input asp-for="Contraseña" type="text" class="form-control" placeholder="Contraseña" />
                </div>
            </div>
            <button type="reset" class="btn btn-secondary">Limpiar</button>
            <button type="submit" class="btn btn-primary">LogIn</button
        </form>

        
